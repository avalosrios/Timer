<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textColor="#26015d"
            android:textAlignment="center"
            android:textSize="35dp"
            android:typeface="normal"
            android:textStyle="bold"
            android:gravity="center|center_vertical|center_horizontal" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Space
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_column="0" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/legend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/runningText"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="25dp"
            android:typeface="normal"
            android:textStyle="bold"
            android:gravity="center|center_vertical|center_horizontal"
            android:visibility="invisible"
            android:layout_column="0" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:textAlignment="center"
            android:useDefaultMargins="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_column="0"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="HRs"
                android:id="@+id/hoursText"
                android:layout_row="0"
                android:layout_column="0"
                android:textStyle="bold"
                android:textSize="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" : "
                android:id="@+id/fillTextView"
                android:layout_row="0"
                android:layout_column="1"
                android:textStyle="bold"
                android:textSize="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Min"
                android:id="@+id/minutesText"
                android:layout_row="0"
                android:layout_column="2"
                android:textStyle="bold"
                android:textSize="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" : "
                android:id="@+id/fillTextView2"
                android:layout_row="0"
                android:layout_column="3"
                android:textStyle="bold"
                android:textSize="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sec"
                android:id="@+id/secondsText"
                android:layout_row="0"
                android:layout_column="4"
                android:textStyle="bold"
                android:textSize="50dp"/>
        </GridLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/footer_legend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopText"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textColor="#26015d"
            android:textAlignment="center"
            android:textSize="35dp"
            android:typeface="normal"
            android:textStyle="bold"
            android:gravity="center|center_vertical|center_horizontal"
            android:layout_column="0" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Space
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_column="0" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer setup"
            android:id="@+id/timerSetupButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:onClick="buttonClickHandler"
            android:layout_column="0" />
    </TableRow>

</TableLayout>
